{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "incremental": false,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "module": "CommonJS", //打包模块类型ESNext
    "noImplicitAny": false, //支持类型不标注可以默认any
    "removeComments": true, // 删除注释
    "moduleResolution": "node", //按照node模块来解析
    "esModuleInterop": true, //支持es6，commonjs模块
    "jsx": "preserve", // jsx不转
    "target": "es6", //遵循es6版本
    "useUnknownInCatchVariables": false,
    "sourceMap": false,
    "lib": [
      // 编译时用的库
      "ESNext",
      "DOM"
    ],
    "types": ["unplugin-vue-macros/macros-global"],
    "allowSyntheticDefaultImports": true, //允许没有导出的模块中导入
    "experimentalDecorators": true, // 装饰器语法
    "forceConsistentCasingInFileNames": true, // 强制区分大小写
    "resolveJsonModule": true, // 解析json模块
    "strict": true, //是否启动严格模式
    "skipLibCheck": true, //跳过类库检测(用来控制global.d.ts 不报错)
    "baseUrl": "./",
    "noLib": false, // 不处理类库
    "paths": {
      "@packages/*": ["packages/rrz-web-design/packages/*"],
      "@rrz-web-design/*": ["packages/rrz-web-design/packages/*"]
    }
  },
  "exclude": ["node_modules", "**/_tests_", "dist/**"] // 排除掉那些类库
}
